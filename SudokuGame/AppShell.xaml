<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SudokuGame.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SudokuGame"
    Shell.FlyoutBehavior="Disabled"
    Title="Sudoku">

    <!-- 
        TabBar định nghĩa thanh điều hướng ở dưới cùng.
        Mỗi ShellContent là một tab.
    -->
    <TabBar>
        <ShellContent
            Title="Trò chơi"
            Icon="game_icon.png" 
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Hàng ngày"
            Icon="calendar_icon.png"
            ContentTemplate="{DataTemplate local:DailyChallengePage}"
            Route="DailyChallengePage" />

        <ShellContent
            Title="Thống kê"
            Icon="stats_icon.png"
            ContentTemplate="{DataTemplate local:StatsPage}"
            Route="StatsPage" />
    </TabBar>

</Shell>